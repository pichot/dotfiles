bell-features = audio,title,attention
font-family = JetBrains Mono
font-size = 14
cursor-style = block

{{- if eq .os "macos" }}

# Hide titlebar to avoid tabs-as-windows bug with AeroSpace
macos-titlebar-style = hidden
{{- end }}

# ── Split appearance ──────────────────────────────────────────────
unfocused-split-opacity = 0.85
focus-follows-mouse = true

# ── Keybindings: Splits ──────────────────────────────────────────
{{- if eq .os "macos" }}
# Create splits
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Navigate between splits
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:up
keybind = cmd+alt+down=goto_split:down

# Resize splits
keybind = cmd+ctrl+left=resize_split:left,40
keybind = cmd+ctrl+right=resize_split:right,40
keybind = cmd+ctrl+up=resize_split:up,40
keybind = cmd+ctrl+down=resize_split:down,40

# Equalize all splits
keybind = cmd+shift+e=equalize_splits

# Zoom/unzoom current split (like tmux zoom)
keybind = cmd+shift+z=toggle_split_zoom

# Cycle through splits
keybind = cmd+]=goto_split:next
keybind = cmd+[=goto_split:previous

# Remap Cmd+T to open a split instead of a tab
keybind = cmd+t=new_split:auto
{{- else if eq .os "linux" }}
# Create splits
keybind = ctrl+d=new_split:right
keybind = ctrl+shift+d=new_split:down

# Navigate between splits
keybind = ctrl+alt+left=goto_split:left
keybind = ctrl+alt+right=goto_split:right
keybind = ctrl+alt+up=goto_split:up
keybind = ctrl+alt+down=goto_split:down

# Resize splits
keybind = ctrl+shift+left=resize_split:left,40
keybind = ctrl+shift+right=resize_split:right,40
keybind = ctrl+shift+up=resize_split:up,40
keybind = ctrl+shift+down=resize_split:down,40

# Equalize all splits
keybind = ctrl+shift+e=equalize_splits

# Zoom/unzoom current split (like tmux zoom)
keybind = ctrl+shift+z=toggle_split_zoom

# Cycle through splits
keybind = ctrl+]=goto_split:next
keybind = ctrl+[=goto_split:previous

# New split
keybind = ctrl+t=new_split:auto
{{- end }}
